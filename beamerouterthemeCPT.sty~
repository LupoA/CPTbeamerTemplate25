\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{frametitle}
{
	\begin{beamercolorbox}{frametitle}
		\vspace{0.1cm} \\
		\textcolor{white}{\Large \insertframetitle}
	\end{beamercolorbox}
}


\RequirePackage{tikz}

\addtocounter{framenumber}{-1} % Reduce the counter by one after the title page


\setbeamersize{text margin left=6mm,text margin right=6mm}
\newlength{\marginedtextwidth}{\textwidth - 12mm}

% Title page

\setbeamertemplate{title page}{
	\begin{tikzpicture}[remember picture,overlay]
		\node[right,inner sep=0pt] at (current page.west)
		{
			\includegraphics[width=\paperwidth]{\backgroundImagePath}
		};
		
		\node[above right,inner sep= 0.1cm, yshift = -0.5cm] at (current page.west)
		{
			
		};
		
		\node[anchor=north east, inner sep=0.2cm, xshift=-0.5cm, yshift=-0.8cm]
		at (current page.north east)
		{%
			\begin{tabular}{@{}c@{}}
				\includegraphics[width=0.3\paperheight]{\CNRSLogo}\\[0.8cm]
				\hspace{0.4cm}\includegraphics[width=0.3\paperheight]{\anrLogo}\\[0.9cm]
				\includegraphics[width=0.3\paperheight]{\CPTLogo}
			\end{tabular}%
		};
		
		\node[above right, inner sep=0.4cm, yshift=0.cm] at (current page.west)
		{
			\textcolor{white}{\Huge \textbf{\inserttitle}}
		};
		
		\node[below right, inner sep=0.4cm, yshift=-0.3cm] at (current page.west)
		{
			\textcolor{black}{Alessandro Lupo (Aix-Marseille Universit√© \& CNRS)}
		};
		
		\node[below right, inner sep=0.4cm, yshift=-1.2cm] at (current page.west)
		{
			\textcolor{black}{\Large on behalf of BMW and DMZ}
		};
		\node[below right, inner sep=0.4cm, yshift=-2.6cm] at (current page.west)
		{
			\textcolor{black}{EPS conference, Marseille}
		};
		\node[below right, inner sep=0.4cm, yshift=-3.2cm] at (current page.west)
		{
			\textcolor{black}{09 July 2025}
		};
	\end{tikzpicture}
}

% Header image on each slide

\setbeamertemplate{headline}{
	\begin{tikzpicture}[remember picture,overlay]
		\node[below right,inner sep=0pt] at (current page.north west)
		{
			\includegraphics[width=\paperwidth]{\headlineImagePath}
		};
		
		\node[below left,inner sep=0pt, xshift=-0.3cm] at (current page.north east)
		{
			\includegraphics[width=0.08\paperwidth]{\CPTLogo}
		};
	\end{tikzpicture}
}

% Footline (footer)

\setbeamertemplate{footline}{
	\begin{beamercolorbox}[wd=\textwidth,ht=0mm,dp=0mm]{fuss}
		\hspace{5mm} \textcolor{PrimaryColor}{} \inserttitle, \insertauthor
		\vspace{1mm} \hfill 
		\hspace{2mm} 
		\insertframenumber/\inserttotalframenumber 
		\hspace{5mm}
	\end{beamercolorbox}
}


% Chapter heading environment

\newenvironment{chapterpage}{
	\setbeamertemplate{background}{
		\includegraphics[width=\paperwidth,height=\paperheight]{\backgroundImagePath}
	}
	
	\setbeamertemplate{frametitle}{
		\begin{tikzpicture}[remember picture,overlay]
			\node[right,inner sep=0pt, yshift=1.1cm] at (current page.west)
			{
				\hspace{6mm} \Large \textcolor{white}{\insertframetitle}
			};
		\end{tikzpicture}
	}
}{ % end environment and reset to default background
	\setbeamertemplate{background}{}
	\setbeamertemplate{frametitle}{}
}

\setbeamertemplate{section in toc}[sections numbered]
\setbeamertemplate{subsection in toc}[subsections numbered]

